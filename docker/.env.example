# docker/.env.example
# Copy to .env and adjust before running `task docker:up`
# The demo script (scripts/demo.sh) writes to this file to inject faults.

# Grafana admin password
GRAFANA_ADMIN_PASSWORD=admin

# ── Fault injection — set by demo.sh or manually ─────────────────────────────
# ERROR_RATE: 0.0 = no errors, 0.5 = 50% errors, 1.0 = 100% errors
# LATENCY: Go duration string, e.g. "1ms", "200ms", "1s"

CURRENCY_ERROR_RATE=0
CURRENCY_LATENCY_P50=1ms
CURRENCY_LATENCY_P90=1ms
CURRENCY_LATENCY_P99=1ms

CACHE_ERROR_RATE=0
CACHE_LATENCY_P50=1ms
CACHE_LATENCY_P90=1ms
CACHE_LATENCY_P99=1ms

PAYMENTS_ERROR_RATE=0
PAYMENTS_LATENCY_P50=1ms
PAYMENTS_LATENCY_P90=1ms
PAYMENTS_LATENCY_P99=1ms

API_ERROR_RATE=0
API_LATENCY_P50=1ms
API_LATENCY_P90=1ms
API_LATENCY_P99=1ms

WEB_ERROR_RATE=0
WEB_LATENCY_P50=1ms
WEB_LATENCY_P90=1ms
WEB_LATENCY_P99=1ms

RATES_ERROR_RATE=0
RATES_LATENCY_P50=1ms
RATES_LATENCY_P90=1ms
RATES_LATENCY_P99=1ms
