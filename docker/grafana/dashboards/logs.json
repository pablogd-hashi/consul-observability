{
  "title": "Envoy Access Logs",
  "uid": "envoy-access-logs",
  "description": "Envoy proxy access logs from Loki. Includes request rate, error counts, and live log stream with trace correlation.",
  "tags": ["envoy", "logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "15s",
  "time": { "from": "now-30m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "status_filter",
        "label": "Status Code",
        "type": "custom",
        "query": "All,2xx,4xx,5xx",
        "current": { "value": "All", "text": "All" },
        "options": [
          { "value": "All", "text": "All" },
          { "value": "2xx", "text": "2xx" },
          { "value": "4xx", "text": "4xx" },
          { "value": "5xx", "text": "5xx" }
        ],
        "includeAll": false,
        "multi": false
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Total Requests",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"] }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "count_over_time({service_name=\"envoy-sidecar\", log_source=\"access-log\"} [5m])",
          "legendFormat": "requests",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "5xx Errors",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": { "calcs": ["sum"] }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "count_over_time({service_name=\"envoy-sidecar\", log_source=\"access-log\"} | json | http_status_code >= 500 [5m])",
          "legendFormat": "5xx",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Avg Response Time",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          },
          "unit": "ms"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "avg_over_time({service_name=\"envoy-sidecar\", log_source=\"access-log\"} | json | unwrap http_duration_ms [5m])",
          "legendFormat": "avg ms",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Unique Upstreams",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null }
            ]
          },
          "unit": "short"
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": { "calcs": ["lastNotNull"] }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "count(count by (net_peer_name) ({service_name=\"envoy-sidecar\", log_source=\"access-log\"} | json | __error__=\"\"))",
          "legendFormat": "hosts",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Request Rate by Status",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 4 },
      "datasource": { "type": "loki", "uid": "loki" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10, "lineWidth": 2 }
        }
      },
      "options": {
        "legend": { "calcs": ["mean", "max"], "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(rate({service_name=\"envoy-sidecar\", log_source=\"access-log\"} | json | http_status_code >= 200, http_status_code < 300 [1m]))",
          "legendFormat": "2xx",
          "refId": "A"
        },
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(rate({service_name=\"envoy-sidecar\", log_source=\"access-log\"} | json | http_status_code >= 400, http_status_code < 500 [1m]))",
          "legendFormat": "4xx",
          "refId": "B"
        },
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "sum(rate({service_name=\"envoy-sidecar\", log_source=\"access-log\"} | json | http_status_code >= 500 [1m]))",
          "legendFormat": "5xx",
          "refId": "C"
        }
      ]
    },
    {
      "id": 6,
      "title": "Access Log Stream",
      "description": "Live Envoy access logs. Each entry includes method, path, status code, duration, upstream host, and traceparent for Jaeger correlation.",
      "type": "logs",
      "gridPos": { "h": 16, "w": 24, "x": 0, "y": 12 },
      "datasource": { "type": "loki", "uid": "loki" },
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false,
        "prettifyLogMessage": true,
        "enableLogDetails": true
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service_name=\"envoy-sidecar\", log_source=\"access-log\"}",
          "refId": "A"
        }
      ]
    }
  ]
}
