{
  "title": "Golden Signals â€” Service",
  "uid": "golden-signals",
  "description": "Per-service golden signals: RPS, error rate, latency (p50/p95/p99), saturation. Use the $service variable to switch between services.",
  "tags": ["consul", "golden-signals", "envoy", "slo"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "15s",
  "time": { "from": "now-30m", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "service",
        "label": "Service",
        "type": "custom",
        "query": "example-app,backend-api,db-api",
        "current": { "value": "example-app", "text": "example-app" },
        "options": [
          { "value": "example-app", "text": "example-app" },
          { "value": "backend-api", "text": "backend-api" },
          { "value": "db-api",      "text": "db-api" }
        ],
        "includeAll": false,
        "multi": false
      },
      {
        "name": "interval",
        "label": "Rate interval",
        "type": "interval",
        "query": "1m,2m,5m,10m",
        "current": { "value": "2m", "text": "2m" },
        "auto": false
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "ðŸ”µ Request Rate (RPS)",
      "description": "Inbound requests per second through Envoy for the selected service",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 50 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(envoy_cluster_upstream_rq_total{envoy_cluster_name=~\"$service.*\"}[$interval]))",
          "legendFormat": "RPS",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "ðŸ”´ Error Rate (%)",
      "description": "Percentage of 5xx responses from the service",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.01 },
              { "color": "red", "value": 0.05 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(envoy_cluster_upstream_rq_xx{envoy_cluster_name=~\"$service.*\",envoy_response_code_class=\"5\"}[$interval])) / sum(rate(envoy_cluster_upstream_rq_total{envoy_cluster_name=~\"$service.*\"}[$interval]))",
          "legendFormat": "Error %",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "ðŸŸ¡ P99 Latency (ms)",
      "description": "99th percentile request latency",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background" },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.99, sum(rate(envoy_cluster_upstream_rq_time_bucket{envoy_cluster_name=~\"$service.*\"}[$interval])) by (le))",
          "legendFormat": "p99",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "ðŸŸ¢ Active Connections",
      "description": "Currently active upstream connections (saturation signal)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 200 }
            ]
          }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value" },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(envoy_cluster_upstream_cx_active{envoy_cluster_name=~\"$service.*\"})",
          "legendFormat": "active cx",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Request Rate Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "reqps", "color": { "mode": "palette-classic" } }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum by (envoy_response_code_class) (rate(envoy_cluster_upstream_rq_xx{envoy_cluster_name=~\"$service.*\"}[$interval]))",
          "legendFormat": "{{envoy_response_code_class}}xx",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(envoy_cluster_upstream_rq_total{envoy_cluster_name=~\"$service.*\"}[$interval]))",
          "legendFormat": "total",
          "refId": "B"
        }
      ]
    },
    {
      "id": 6,
      "title": "Latency Percentiles",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "ms", "color": { "mode": "palette-classic" } }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.50, sum(rate(envoy_cluster_upstream_rq_time_bucket{envoy_cluster_name=~\"$service.*\"}[$interval])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.95, sum(rate(envoy_cluster_upstream_rq_time_bucket{envoy_cluster_name=~\"$service.*\"}[$interval])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "histogram_quantile(0.99, sum(rate(envoy_cluster_upstream_rq_time_bucket{envoy_cluster_name=~\"$service.*\"}[$interval])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },
    {
      "id": 7,
      "title": "Error Rate Over Time",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "color": { "mode": "palette-classic" },
          "custom": { "fillOpacity": 10 }
        }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(envoy_cluster_upstream_rq_xx{envoy_cluster_name=~\"$service.*\",envoy_response_code_class=\"5\"}[$interval])) / sum(rate(envoy_cluster_upstream_rq_total{envoy_cluster_name=~\"$service.*\"}[$interval]))",
          "legendFormat": "5xx error rate",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(envoy_cluster_upstream_rq_xx{envoy_cluster_name=~\"$service.*\",envoy_response_code_class=\"4\"}[$interval])) / sum(rate(envoy_cluster_upstream_rq_total{envoy_cluster_name=~\"$service.*\"}[$interval]))",
          "legendFormat": "4xx error rate",
          "refId": "B"
        }
      ]
    },
    {
      "id": 8,
      "title": "Upstream Connection Saturation",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": {
        "defaults": { "unit": "short", "color": { "mode": "palette-classic" } }
      },
      "targets": [
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(envoy_cluster_upstream_cx_active{envoy_cluster_name=~\"$service.*\"})",
          "legendFormat": "active connections",
          "refId": "A"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(envoy_cluster_upstream_cx_overflow{envoy_cluster_name=~\"$service.*\"})",
          "legendFormat": "connection overflow",
          "refId": "B"
        },
        {
          "datasource": { "type": "prometheus", "uid": "prometheus" },
          "expr": "sum(rate(envoy_cluster_upstream_rq_pending_overflow{envoy_cluster_name=~\"$service.*\"}[$interval]))",
          "legendFormat": "pending overflow/s",
          "refId": "C"
        }
      ]
    },
    {
      "id": 9,
      "title": "Service Traces (Jaeger)",
      "description": "Recent traces for the selected service. Click a trace to open in Jaeger.",
      "type": "traces",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 20 },
      "datasource": { "type": "jaeger", "uid": "jaeger" },
      "targets": [
        {
          "datasource": { "type": "jaeger", "uid": "jaeger" },
          "queryType": "search",
          "service": "$service",
          "refId": "A"
        }
      ]
    },
    {
      "id": 10,
      "title": "Access Logs (Loki)",
      "description": "Live Envoy access logs. Filter by path or status code.",
      "type": "logs",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 30 },
      "datasource": { "type": "loki", "uid": "loki" },
      "options": {
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": false,
        "prettifyLogMessage": true
      },
      "targets": [
        {
          "datasource": { "type": "loki", "uid": "loki" },
          "expr": "{service_name=\"envoy-sidecar\"} | json | upstream_host =~ \"$service\"",
          "refId": "A"
        }
      ]
    }
  ]
}
